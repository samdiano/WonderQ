{
  "check-coverage": true,
  "per-file": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "require": ["babel-register"],
  "exclude": [
    "**/*.test.js",
    "**/__tests__/**",
    "**/node_modules/**",
    "app.js",
    "**/*index.js",
    "**/*connectdb.js"
  ],
  "watermarks": {
      "lines": [75, 75],
      "functions": [75, 70],
      "branches": [75, 50],
      "statements": [75, 50]
    },
  "reporter": ["lcov", "json", "text"],
  "sourceMap": false,
  "instrument": false,
  "cache": true,
  "report-dir": "./coverage"
}